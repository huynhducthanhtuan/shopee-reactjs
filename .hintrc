{
  "extends": ["development"],
  "hints": {
    "compat-api/html": [
      "default",
      {
        "ignore": ["meta[name=theme-color]"]
      }
    ],
    "highest-available-document-mode": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": ["scroll-behavior", "inset"]
      }
    ],
    "detect-css-reflows/composite": "off",
    "axe/name-role-value": [
      "default",
      {
        "button-name": "off",
        "link-name": "off"
      }
    ],
    "no-inline-styles": "off",
    "button-type": "off",
    "axe/text-alternatives": [
      "default",
      {
        "image-alt": "off"
      }
    ],
    "axe/structure": [
      "default",
      {
        "listitem": "off"
      }
    ]
  }
}
